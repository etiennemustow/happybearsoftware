<h1> Create a new guestbook listing! </h1>


<%= form_with scope: :listing, url: listings_path, local: true do |form| %>
  <p>
    <%= form.label :message %><br>
    <%= form.text_area :message %>
  </p>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
